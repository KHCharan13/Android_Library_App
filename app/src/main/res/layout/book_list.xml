<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15sp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="20dp">

  <ImageView
      android:id="@+id/img"
      android:layout_width="134dp"
      android:layout_height="145dp"
      android:src="@mipmap/ic_launcher"

      ></ImageView>

  <TextView
      android:id="@+id/bname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_toRightOf="@+id/img"
      android:text="Book name"

      android:textColor="@color/black"
      android:textSize="25dp"
      android:textStyle="bold"></TextView>

  <TextView
      android:id="@+id/author"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/bname"

      android:layout_marginLeft="25dp"
      android:layout_toRightOf="@+id/img"
      android:text="Author"
      android:textColor="#85000000"
      android:textSize="18dp"
      android:textStyle="bold"></TextView>

  <TextView
      android:id="@+id/genre"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/author"
      android:layout_marginLeft="25dp"
      android:layout_toRightOf="@+id/img"
      android:text="Genre"
      android:textColor="#85000000"
      android:textSize="18dp"
      android:textStyle="bold"></TextView>

  <TextView
      android:id="@+id/location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/genre"
      android:layout_marginLeft="25dp"
      android:layout_toRightOf="@+id/img"
      android:text="Location"
      android:textAlignment="textStart"
      android:textColor="#85000000"
      android:textSize="18dp"
      android:textStyle="bold"></TextView>

  <TextView
      android:id="@+id/copies1"
      android:layout_width="148dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/location"
      android:layout_marginLeft="25dp"
      android:layout_toRightOf="@+id/img"
      android:text="Books in Library :"
      android:textAlignment="viewStart"
      android:textColor="#85000000"
      android:textSize="18dp"
      android:textStyle="bold"></TextView>

  <TextView
      android:id="@+id/copies"
      android:layout_width="30dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/location"
      android:layout_marginLeft="2sp"
      android:layout_toRightOf="@+id/copies1"
      android:text="0"
      android:textAlignment="viewStart"
      android:textColor="#85000000"
      android:textSize="18dp"
      android:textStyle="bold"></TextView>



  <LinearLayout
      android:id="@+id/abc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/copies"
      android:layout_marginTop="0dp"
      android:orientation="horizontal">

   <Button
       android:id="@+id/editButton"
       android:layout_width="110dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="10sp"
       android:layout_marginRight="5dp"
       android:text="Edit"
       android:textAllCaps="false"></Button>

   <Button
       android:id="@+id/deleteButton"
       android:layout_width="110dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:layout_marginTop="10sp"

       android:layout_marginRight="5dp"
       android:text="Delete"
       android:textAllCaps="false"></Button>

   <Button
       android:id="@+id/assignButton"
       android:layout_width="110dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:text="Assign/\nReturn"
       android:textAllCaps="false"></Button>

  </LinearLayout>
  <TextView
      android:id="@+id/link"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/abc"
      android:layout_marginTop="6dp"
      android:text="online link"
      android:textAlignment="center"
      android:textColor="#85000000"

      android:textSize="18dp" />
  <TextView
      android:id="@+id/linklabel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/link"
      android:layout_marginTop="6dp"
      android:text="Access the pdf here!! Sorry for the inconvenience"
      android:textAlignment="center"
      android:textColor="#85000000"

      android:textSize="18dp" />

 </RelativeLayout>


</androidx.cardview.widget.CardView>